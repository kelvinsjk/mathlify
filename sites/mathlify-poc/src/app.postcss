/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
	font-size: 21px;
	max-width: 100vw;
}

html {
	scroll-behavior: smooth;
	box-sizing: border-box;
}

@media (prefers-reduced-motion) {
	html {
		scroll-behavior: auto;
	}
}

*,
*:before,
*:after {
	box-sizing: inherit;
}